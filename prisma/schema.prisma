generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Lead {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  createdDate  DateTime @default(now())
  modifiedDate DateTime @updatedAt
  phone        String   @db.VarChar(20)
  stage        String
  amount       Int
  title        String
  company      String
  ownerName    String
  notes        String
}
